<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubNavAPI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="font_small_bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="font_small" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="font_big_bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="font_splash_bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>